<div class="grid">
    <header class="header">
        <h2 class="title">
            {{#> header-slot}}Header-slot{{/ header-slot}}
        </h2>
    </header>

    <div class="meta">
        {{#> meta-slot}}
            {{> _components/post-meta}}
        {{/ meta-slot}}
    </div>

    {{^if noThumbnail}}
    <a href="{{url}}" class="thumbnail" id="{{url}}-post-thumbnail">
        <div class="aspect-box">
            {{#> thumbnail-slot}}
                {{#if feature_image}}
                    <img src="{{img_url feature_image size="s"}}" alt="{{title}}" />
                {{else if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{title}}" />
                {{else}}
                    <span class="no-image"></span>
                {{/if}}            
            {{/ thumbnail-slot}}
        </div>
    </a>
    {{/if}}

    <div class="text-container">
        {{#> text-container-slot}}{{/ text-container-slot}}
    </div>

    </a href="{{url}}">
</div>